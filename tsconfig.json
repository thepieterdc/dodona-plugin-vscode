{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationDir": "./out",
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./out",
    "removeComments": true,
    "resolveJsonModule": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules", "out"]
}