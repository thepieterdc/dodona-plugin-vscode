{
  "name": "dodona-plugin-vscode",
  "displayName": "Dodona",
  "description": "Extension for Visual Studio Code to submit exercises to Dodona.",
  "version": "1.0.0",
  "publisher": "thepieterdc",
  "repository": {
    "type": "git",
    "url": "https://github.com/thepieterdc/dodona-plugin-vscode"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "icon": "assets/dodona.png",
  "activationEvents": [
    "onCommand:extension.submit",
    "onCommand:extension.description",
    "onView:extension.description",
    "onView:dodona-exercises"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dodona.submit",
        "title": "Submit to Dodona"
      },
      {
        "command": "dodona.exercise.description",
        "title": "Show exercise description",
        "icon": "assets/open-exercise.svg"
      },
      {
        "command": "dodona.exercise.create",
        "title": "Open exercise in editor",
        "icon": "assets/edit.svg"
      }
    ],
    "configuration": {
      "title": "Dodona",
      "properties": {
        "dodona.auth.dodona": {
          "type": "string",
          "default": null,
          "description": "Specifies which API token should be used to authorize to Dodona.",
          "scope": "application"
        },
        "dodona.auth.naos": {
          "type": "string",
          "default": null,
          "description": "Specifies which API token should be used to authorize to Naos.",
          "scope": "application"
        },
        "dodona.environment": {
          "type": "string",
          "default": "https://dodona.ugent.be",
          "enum": [
            "https://dodona.ugent.be",
            "https://naos.ugent.be"
          ],
          "description": "Specifies which Dodona environment should be used.",
          "scope": "application"
        },
        "dodona.automaticallyOpenExerciseDescription": {
          "type": "boolean",
          "default": true,
          "description": "Specifies whether or not creating a new exercise should automatically open its description in a new window."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "dodona.exercise.create",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "dodona.exercise.description",
          "when": "view == dodona-exercises && viewItem == exercise",
          "group": "inline"
        },
        {
          "command": "dodona.exercise.create",
          "when": "view == dodona-exercises && viewItem == exercise",
          "group": "inline"
        }
      ]
    },
    "views": {
      "dodona-exercises": [
        {
          "id": "dodona-exercises",
          "name": "Dodona Exercises"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dodona-exercises",
          "title": "Dodona Exercises",
          "icon": "assets/activity-bar-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "package": "vsce package",
    "vscode:prepublish": "yarn run compile",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "got": "^11.7.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/vscode": "^1.34.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "vsce": "^1.80.0"
  }
}
