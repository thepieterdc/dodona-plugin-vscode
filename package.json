{
  "name": "dodona-plugin-vscode",
  "displayName": "Dodona",
  "description": "Extension for Visual Studio Code to submit exercises to Dodona.",
  "version": "0.1.1",
  "publisher": "thepieterdc",
  "repository": {
    "type": "git",
    "url": "https://github.com/thepieterdc/dodona-plugin-vscode"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "icon": "assets/dodona.png",
  "activationEvents": [
    "onCommand:extension.submit",
    "onCommand:extension.description"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.submit",
        "title": "Submit to Dodona"
      },
      {
        "command": "extension.description",
        "title": "Show exercise description"
      }
    ],
    "configuration": {
      "title": "Dodona",
      "properties": {
        "dodona.api.token": {
          "type": "string",
          "default": null,
          "description": "Specifies which API token should be used to authorize to Dodona.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "bent": "^7.3.6"
  },
  "devDependencies": {
    "@types/bent": "^7.0.2",
    "@types/node": "^12.12.6",
    "@types/vscode": "^1.34.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "typescript": "^3.9.5"
  }
}
